            <!--<intent-filter>-->
                <!--<action android:name="android.bluetooth.adapter.action.DISCOVERY_FINISHED"/>-->
                <!--<action android:name="android.bluetooth.device.action.FOUND" />-->
            <!--</intent-filter>-->
        <!--</receiver>-->
        <service android:name=".services.BlueToothControlService"/>

    </application>

</manifest>